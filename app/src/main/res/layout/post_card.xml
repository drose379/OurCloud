<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <android.support.v7.widget.CardView

        xmlns:custom_text="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:background="@color/ColorWhite"
        card_view:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileInfoContainer">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="15dp"
                android:id="@+id/userImage"
                />


            <com.example.dylan.ourcloud.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/ColorBlack"
                custom_text:bold="true"
                android:id="@+id/userName"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileInfoContainer"
            android:id="@+id/postContainer"
            >

            <com.example.dylan.ourcloud.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColor="@color/ColorBlack"
                android:id="@+id/postText"
                />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@+id/postText"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                android:id="@+id/postImage"
                />

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postContainer"
                android:background="#F5F5F5"
                >

                <com.example.dylan.ourcloud.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textColor="@color/ColorBlack"
                    android:textSize="12sp"
                    custom_text:bold="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/postDate"
                    />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>



