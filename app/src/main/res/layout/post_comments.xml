<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customText="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.dylan.ourcloud.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        customText:bold="true"
        android:textColor="@color/ColorBlack"
        android:background="#8000bfa5"
        android:id="@+id/addComButton"
        android:text="Add"
        />


    <!-- Listview to contain comment cards -->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:layout_below="@id/addComButton"
        android:id="@+id/commentListView"
        />

    <com.example.dylan.ourcloud.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:text="No Comments Yet."
        android:id="@+id/noCommentsText"
        />

</RelativeLayout>